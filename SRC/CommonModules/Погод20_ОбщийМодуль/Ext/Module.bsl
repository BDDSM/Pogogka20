	ШрифтСегодня = Новый Шрифт("Arial", 30,  Истина);
	ЦветПогода   = Новый Цвет(154, 154, 154);	
	
	Если ТипЗнч(стДанныеПрогноза) <> Тип("Структура") ИЛИ стДанныеПрогноза.Количество() = 0 Тогда
		стДанныеВиджета = ЗаполнитьЭлементыВиджета_Ошибка();
		Возврат стДанныеВиджета;
	КонецЕсли;
	
	Если НЕ стДанныеПрогноза.Свойство("мПрогноз") ИЛИ 
			НЕ(ТипЗнч(стДанныеПрогноза.мПрогноз) = Тип("Массив") И стДанныеПрогноза.Количество() > 0) Тогда
		стДанныеВиджета = ЗаполнитьЭлементыВиджета_Ошибка();
		Возврат стДанныеВиджета;
	КонецЕсли;
	
