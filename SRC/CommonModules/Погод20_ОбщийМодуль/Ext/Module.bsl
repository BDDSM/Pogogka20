	стДанныеВиджета.Вставить("ПОЛЬЗ0_ВремяСуток1",         Новый ФорматированнаяСтрока(стДанныеПрогноза.мПрогноз[1].сВремяСуток, ШрифтПрогноз, ЦветПогода));
