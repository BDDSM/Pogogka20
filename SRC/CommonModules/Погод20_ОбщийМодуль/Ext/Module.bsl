	// ПРОГНОЗ 2
	стДанныеВиджета.Вставить("ПОЛЬЗ0_ВремяСуток2",         Новый ФорматированнаяСтрока(стДанныеПрогноза.мПрогноз[2].сВремяСуток, ШрифтПрогноз, ЦветПогода));
