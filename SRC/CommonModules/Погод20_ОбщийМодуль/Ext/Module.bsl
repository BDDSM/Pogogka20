	стДанныеВиджета.Вставить("ПОЛЬЗ0_ПрогнозТемпература3", Новый ФорматированнаяСтрока(фсДанные1, фсДанные2));
	стДанныеВиджета.Вставить("ПОЛЬЗ0_ПрогнозКартинка3",    ПолучитьКартинкуПрогноза(стДанныеПрогноза.мПрогноз[3].сПогодаИД, сПоставщикПогоды));
	
